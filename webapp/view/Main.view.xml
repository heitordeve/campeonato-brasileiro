<mvc:View xmlns:table="sap.ui.table"
    xmlns:cards="sap.f.cards" controllerName="campeonatobrasileiro.controller.Main"
    xmlns:c="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <ObjectHeader title="{ModeloDadosGerais>/campeonato}" number="{ModeloDadosGerais>/rodada}" numberUnit="Rodada" />

            <IconTabBar>
                <items>
                    <IconTabFilter text="Classificação" icon="sap-icon://competitor" key="classificacao">
                        <!-- Tabela -->
                        <Table items="{ClassificacaoModel>/Classificacao}">
                            <columns>
                                <!-- Posição -->
                                <Column>
                                    <Text text="Posição" />
                                </Column>
                                <!-- Escudo -->
                                <Column>
                                    <Text text="" />
                                </Column>
                                <!-- Nome do Time -->
                                <Column>
                                    <Text text="Time" />
                                </Column>
                                <!-- Pontos -->
                                <Column>
                                    <Text text="Pts" />
                                </Column>
                                <!-- Partidas Jogadas -->
                                <Column>
                                    <Text text="PJ" />
                                </Column>
                                <!-- Vitórias -->
                                <Column>
                                    <Text text="VIT" />
                                </Column>
                                <!-- Empates -->
                                <Column>
                                    <Text text="E" />
                                </Column>
                                <!-- Derrotas -->
                                <Column>
                                    <Text text="DER" />
                                </Column>
                                <!-- Gols Marcados -->
                                <Column>
                                    <Text text="GM" />
                                </Column>
                                <!-- Gols Sofridos -->
                                <Column>
                                    <Text text="GC" />
                                </Column>
                                <!-- Saldo de Gols -->
                                <Column>
                                    <Text text="SG" />
                                </Column>
                            </columns>

                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <!-- 1ª Coluna posição-->
                                        <Text text="{ClassificacaoModel>posicao}"></Text>
                                        <!-- 2ª Coluna escudo-->
                                        <Image src="{ClassificacaoModel>time/escudo}" width="30%"></Image>
                                        <!-- 3ª Coluna nome do time-->
                                        <Text text="{ClassificacaoModel>time/nome_popular}"></Text>
                                        <!-- 4ª Coluna pontos-->
                                        <Text text="{ClassificacaoModel>pontos}"></Text>
                                        <!-- 5ª Coluna jogos-->
                                        <Text text="{ClassificacaoModel>jogos}"></Text>
                                        <!-- 6ª Coluna vitórias-->
                                        <Text text="{ClassificacaoModel>vitorias}"></Text>
                                        <!-- 7ª Coluna Empates-->
                                        <Text text="{ClassificacaoModel>empates}"></Text>
                                        <!-- 8ª Coluna Derrotas-->
                                        <Text text="{ClassificacaoModel>derrotas}"></Text>
                                        <!-- 9ª Coluna Gols Marcados-->
                                        <Text text="{ClassificacaoModel>gols_pro}"></Text>
                                        <!-- 10ª Coluna Gols Sofridos-->
                                        <Text text="{ClassificacaoModel>gols_contra}"></Text>
                                        <!-- 11ª Coluna Saldo de Gols-->
                                        <Text text="{ClassificacaoModel>saldo_gols}"></Text>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </IconTabFilter>

                    <IconTabFilter text="Partidas" icon="sap-icon://soccer" key="partidas">

                        <!-- importando fragment -->
                        <c:Fragment 
                        fragmentName="campeonatobrasileiro.view.partidas" 
                        type="XML" />
                    
                </IconTabFilter>
            </items>
        </IconTabBar>
    </content>
</Page>
</mvc:View>
