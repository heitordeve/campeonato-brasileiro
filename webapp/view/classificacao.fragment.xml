<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
<!-- Tabela -->
<Table items="{ModeloClassificacao>/Classificacao}">
    <columns>
        <!-- Posição -->
        <Column>
            <Text text="Posição" />
        </Column>
        <!-- Escudo -->
        <Column>
            <Text text="" />
        </Column>
        <!-- Nome do Time -->
        <Column>
            <Text text="Time" />
        </Column>
        <!-- Pontos -->
        <Column>
            <Text text="Pts" />
        </Column>
        <!-- Partidas Jogadas -->
        <Column>
            <Text text="PJ" />
        </Column>
        <!-- Vitórias -->
        <Column>
            <Text text="VIT" />
        </Column>
        <!-- Empates -->
        <Column>
            <Text text="E" />
        </Column>
        <!-- Derrotas -->
        <Column>
            <Text text="DER" />
        </Column>
        <!-- Gols Marcados -->
        <Column>
            <Text text="GM" />
        </Column>
        <!-- Gols Sofridos -->
        <Column>
            <Text text="GC" />
        </Column>
        <!-- Saldo de Gols -->
        <Column>
            <Text text="SG" />
        </Column>
    </columns>

    <items>
        <ColumnListItem>
            <cells>
                <!-- 1ª Coluna posição-->
                <Text text="{ModeloClassificacao>posicao}"></Text>
                <!-- 2ª Coluna escudo-->
                <Image src="{ModeloClassificacao>time/escudo}" width="30%"></Image>
                <!-- 3ª Coluna nome do time-->
                <Text text="{ModeloClassificacao>time/nome_popular}"></Text>
                <!-- 4ª Coluna pontos-->
                <Text text="{ModeloClassificacao>pontos}"></Text>
                <!-- 5ª Coluna jogos-->
                <Text text="{ModeloClassificacao>jogos}"></Text>
                <!-- 6ª Coluna vitórias-->
                <Text text="{ModeloClassificacao>vitorias}"></Text>
                <!-- 7ª Coluna Empates-->
                <Text text="{ModeloClassificacao>empates}"></Text>
                <!-- 8ª Coluna Derrotas-->
                <Text text="{ModeloClassificacao>derrotas}"></Text>
                <!-- 9ª Coluna Gols Marcados-->
                <Text text="{ModeloClassificacao>gols_pro}"></Text>
                <!-- 10ª Coluna Gols Sofridos-->
                <Text text="{ModeloClassificacao>gols_contra}"></Text>
                <!-- 11ª Coluna Saldo de Gols-->
                <Text text="{ModeloClassificacao>saldo_gols}"></Text>
            </cells>
        </ColumnListItem>
    </items>
</Table>


</c:FragmentDefinition>